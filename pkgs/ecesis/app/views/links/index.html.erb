<p id="notice"><%= notice %></p>

<h1>Links</h1>

<table>
  <thead>
    <tr>
      <th>Book</th>
      <th>Filename</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @links.each do |link| %>
      <tr>
        <td><%= link_to link.book, link.book %></td>
        <td><%= link_to link.filename, link.filename %></td>
        <td><%= link_to '👁', link %></td>
        <td><%= link_to '✏', edit_link_path(link) %></td>
        <td><%= link_to '🗑', link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Link', new_link_path %>
