<p id="notice"><%= notice %></p>

<h1>Servers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @servers.each do |server| %>
      <tr>
        <td><%= link_to server.name, directories_path(server: server) %></td>
        <td><%= number_with_delimiter(
          server.shares.count
         ) %></td>
        <td><%= link_to '👁', server %></td>
        <td><%= link_to '✏', edit_server_path(server) %></td>
        <td><%= link_to '🗑', server, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

